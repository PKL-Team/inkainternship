<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="35dp">
    </com.daimajia.slider.library.SliderLayout>

    <TextView
        android:id="@+id/fb1n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slider"
        android:text="Selamat Datang di Aplikasi Pendaftaran"
        android:textSize="13sp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/fb2n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fb1n"
        android:text="PRAKERIN DAN PKL PT. INKA MADIUN (PERSERO)"
        android:textSize="13sp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/fb3n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fb2n"
        android:text="INKA INTERNSHIP"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="325dp"
        android:layout_height="200dp"
        android:layout_below="@id/fb3n"
        android:layout_marginTop="35dp"
        android:background="#fff"
        android:textSize="13sp"
        android:inputType="text"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:textAlignment="viewStart" />
</RelativeLayout>
