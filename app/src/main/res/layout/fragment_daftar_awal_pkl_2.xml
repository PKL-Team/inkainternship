<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATA DIRI"
            android:textSize="15sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#fff"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp">

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Nama Lengkap"
                    android:textSize="15sp"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/daNamaPkl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="#fff" />
            </TableRow>

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="NIM"
                    android:textSize="15sp"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/daNim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="#fff" />
            </TableRow>

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="IPK"
                    android:textSize="15sp"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/daIpk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="#fff" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PERSYARATAN DOKUMEN"
            android:textSize="15sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#fff"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp">

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Scan KTP"
                    android:textSize="15sp"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/scan1"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="#AAAAAA"
                    android:text="Pilih File"
                    android:textColor="#FF0000"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Scan KTM"
                    android:textSize="15sp"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/scan2"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="#AAAAAA"
                    android:text="Pilih File"
                    android:textColor="#FF0000"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Scan Transkrip IPK"
                    android:textSize="15sp"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/scan3"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="#AAAAAA"
                    android:text="Pilih File"
                    android:textColor="#FF0000"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Scan Pengajuan PKL"
                    android:textSize="15sp"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/scan4"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="#AAAAAA"
                    android:text="Pilih File"
                    android:textColor="#FF0000"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Scan Proposal PKL"
                    android:textSize="15sp"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/scan5"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="#AAAAAA"
                    android:text="Pilih File"
                    android:textColor="#FF0000"
                    android:textSize="13sp" />
            </TableRow>

        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ASAL PERGURUAN TINGGI"
            android:textSize="15sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#fff"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp">
            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Provinsi"
                    android:textSize="15sp"
                    android:textColor="#fff" />

                <Spinner
                    android:id="@+id/spProvinsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp" />
            </TableRow>
            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Kabupaten"
                    android:textSize="15sp"
                    android:textColor="#fff" />

                <Spinner
                    android:id="@+id/spKabupaten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp" />
            </TableRow>
            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Perguruan Tinggi"
                    android:textSize="15sp"
                    android:textColor="#fff" />

                <Spinner
                    android:id="@+id/spNamaKampus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnDaftarAwal2Pkl"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center_vertical|center"
        android:background="#FFDAB9"
        android:text="Daftar"
        android:textColor="#000000"
        android:layout_marginBottom="25dp"/>
    </LinearLayout>
</ScrollView>