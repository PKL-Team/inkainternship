<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/splashText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:layout_gravity="center_horizontal"
        android:text="INKA"
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/splashText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-black"
        android:text="INTERNSHIP"
        android:textColor="#000000"
        android:textSize="24sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textAlignment="center"
        android:text="INKA INTERNSHIP adalah aplikasi pendaftaran online bagi siswa atau mahasiswa yang berencana melaksanakan kegiatan Praktik Kerja Industri (Prakerin) atau Praktik Kerja Lapang (PKL) di PT. Industri Kereta Api (Persero) Madiun."
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright 2020 | INKA INTERNSHIP"
        android:layout_marginTop="130dp"
        android:textColor="#fff"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>