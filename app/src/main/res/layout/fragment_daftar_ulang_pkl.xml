<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutDaftarUlangPkl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Nama Lengkap"
                    android:textSize="15sp"
                    android:textColor="#fff" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text=" : "
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/duNamaPkl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="#fff"/>
            </TableRow>

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Perguruan Tinggi"
                    android:textSize="15sp"
                    android:textColor="#fff" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text=" : "
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/duKampus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="#fff"/>
            </TableRow>

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Penempatan Divisi"
                    android:textSize="15sp"
                    android:textColor="#fff" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text=" : "
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/duDivisiPkl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="#fff"/>
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Scan Surat Penugasan"
                    android:textSize="15sp"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/scanSuratTugasPkl"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="#AAAAAA"
                    android:text="Pilih File"
                    android:textColor="#FFDAB9"
                    android:textSize="13sp" />
            </TableRow>
        </TableLayout>
        <Button
            android:id="@+id/btnDaftarUlangPkl"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center"
            android:background="#FFDAB9"
            android:textColor="#000000"
            android:text="Daftar"/>
    </LinearLayout>

    <TextView
        android:id="@+id/statusPkl"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:background="#FFDAB9"
        android:textColor="#000000"
        android:text="ANDA TELAH MELAKUKAN DAFTAR ULANG"/>

</RelativeLayout>