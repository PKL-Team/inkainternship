<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutLapPkl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp">

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Laporan PKL"
                    android:textSize="15sp"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/scanLaporanPkl"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect_raised_scan"
                    android:text="Pilih File"
                    android:textColor="#FFDAB9"
                    android:textSize="15sp" />
            </TableRow>
        </TableLayout>
        <Button
            android:id="@+id/btnSimpanLaporanPkl"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center"
            android:background="@drawable/ripple_effect_raised"
            android:textColor="#000000"
            android:text="Simpan"/>
    </LinearLayout>

    <TextView
        android:id="@+id/statusLapPkl1"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:background="#FFDAB9"
        android:textColor="#000000"
        android:text="ANDA BELUM MELAKUKAN DAFTAR AWAL"/>


    <TextView
        android:id="@+id/statusLapPkl2"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:background="#FFDAB9"
        android:textColor="#000000"
        android:text="DATA ANDA BELUM DIVERIFIKASI OLEH ADMIN"/>

    <TextView
        android:id="@+id/statusLapPkl3"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:background="#FFDAB9"
        android:textColor="#000000"
        android:text="ANDA TELAH UPLOAD LAPORAN PKL"/>



</RelativeLayout>