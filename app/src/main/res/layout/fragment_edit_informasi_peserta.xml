<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp">

        <TableRow
            android:layout_margin="5dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Nama Lengkap"
                android:textSize="15sp"
                android:textColor="#fff"/>

            <EditText
                android:id="@+id/editNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text=" "/>
        </TableRow>
        <TableRow
            android:layout_margin="5dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="NIM/NIS"
                android:textSize="15sp"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/editID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text=" "/>
        </TableRow>
        <TableRow
            android:layout_margin="5dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Nilai Raport /IPK"
                android:textSize="15sp"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/editNilai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text=" "/>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btnSimpanInformasi"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/dataAkun"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#FFDAB9"
        android:textColor="#000000"
        android:text="Simpan"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mohon pastikan data diri anda dengan benar. Data diri akan digunakan untuk kepentingan setifikat"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="#fff"/>


</LinearLayout>