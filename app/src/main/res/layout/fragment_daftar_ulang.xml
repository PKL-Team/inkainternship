<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutDaftarUlang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Nama Lengkap"
                    android:textSize="15sp"
                    android:textColor="#fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text=" : "
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/duNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="#fff"/>
            </TableRow>

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Asal Sekolah"
                    android:textSize="15sp"
                    android:textColor="#fff" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text=" : "
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/duSekolah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="#fff"/>
            </TableRow>

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Penempatan Divisi"
                    android:textSize="15sp"
                    android:textColor="#fff" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text=" : "
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/duDivisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="#fff"/>
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/btnDaftarUlang"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center"
            android:background="@drawable/ripple_effect_raised"
            android:textColor="#000000"
            android:text="Daftar"/>
    </LinearLayout>


    <TextView
        android:id="@+id/status1"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:background="#FFDAB9"
        android:textColor="#000000"
        android:text="ANDA BELUM MELAKUKAN DAFTAR AWAL"/>


    <TextView
        android:id="@+id/status2"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:background="#FFDAB9"
        android:textColor="#000000"
        android:text="DATA ANDA BELUM DIVERIFIKASI OLEH ADMIN"/>

    <TextView
        android:id="@+id/status3"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:background="#FFDAB9"
        android:textColor="#000000"
        android:text="ANDA TELAH MELAKUKAN DAFTAR ULANG"/>

</RelativeLayout>