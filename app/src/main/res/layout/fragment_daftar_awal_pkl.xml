<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutDaftarAwalPkl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp">

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Jurusan"
                    android:layout_gravity="center_vertical"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/spJurusan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="15sp"
                    android:textColor="#fff" />
            </TableRow>

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Periode"
                    android:layout_gravity="center_vertical"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/spPeriode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="15sp"
                    android:textColor="#fff" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/btnLihatPkl"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/ripple_effect_raised"
            android:textColor="#000000"
            android:gravity="center_vertical|right"
            android:paddingRight="20dp"
            android:text="Lihat" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp">

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Tahun "
                    android:textColor="#fff"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tahunPkl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="..."
                    android:textSize="15sp"
                    android:textColor="#fff"/>
            </TableRow>

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:textColor="#fff"
                    android:text="Kuota Tersedia "
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/kuotaPkl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="..."
                    android:textSize="15sp"
                    android:textColor="#fff"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="orang"
                    android:textSize="15sp"
                    android:textColor="#fff"/>
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/btnLanjutkanPkl"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:gravity="center_vertical|center"
            android:background="@drawable/ripple_effect_raised"
            android:textColor="#000000"
            android:text="Lanjutkan"
            android:paddingRight="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/statusAwalPkl"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:background="#FFDAB9"
        android:textColor="#000000"
        android:text="ANDA TELAH MELAKUKAN PENDAFTARAN AWAL"/>

</RelativeLayout>